{{#partial "title" }}
    Hero Squad
{{/partial}}

<!--squad-form.hbs.-->
{{#partial "content"}}

    <h1>Create your own Squad of heroes here</h1>
    <form action='/greeting_card'>
        <div class="form-group">
            <label for="squadName">Enter Squad name</label>
            <input id="squadName" name="squadName" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="cause">Enter cause your squad is fighting for</label>
            <input id="cause" name="cause" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="name">Enter hero name to add to squad</label>
            <input id="name" name="name" class="form-control" type="text">
        </div>

        <button type="submit" class="btn">Create Squad</button>
    </form>
    <!--squad-form.hbs.-->
{{/partial}}

