<!--hero-form.hbs.-->
{{#partial "content"}}

    <h1>Create your hero here</h1>
    <form action='/hero'>
        <div class="form-group">
            <label for="name">Enter hero name</label>
            <input id="name" name="name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="age">Enter hero's age</label>
            <input id="age" name="age" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="power">What is your hero's super power</label>
            <input id="power" name="power" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="power">What is your hero's weakness</label>
            <input id="weakness" name="weakness" class="form-control" type="text">
        </div>
        <button type="submit" class="btn">Create hero</button>
    </form>
    <!--hero-form.hbs.-->
{{/partial}}

